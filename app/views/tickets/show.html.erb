<p id="notice"><%= notice %></p>
<style>
.chat-box {
    align-self: auto;
    max-width: 100%;
}
.sender {
    width: 100%;
}
.receiver {
    width: 100%;
}
.text-box {
    bottom: 0;
}

</style>
<p>
  <strong>Email:</strong>
  <%= @ticket.email %>
</p>

<p>
  <strong>Text:</strong>
  <%= @ticket.text %>
</p>
<p>
  <strong>Agent:</strong>
  <%= @ticket.agent_id %>
</p>

<h2>Conversation</h2>

<main class="p-3 m-3">
  <div class="chat-box">
    <ul style="list-style: none;" class="p-0">
      <%= render @ticket.comments %>
    </ul>
  </div>
  <% if Agent.find_by(user_id:current_user.id) %>
    <%= render 'comments/form' %>
  <% end %>
</main>
<div class="text-center">
  <% if Admin.find_by(user_id:current_user.id) %>
    <%= link_to 'Edit', edit_ticket_path(@ticket), class:"btn btn-outline-primary" %> |
  <% end %>
  <%= link_to 'Back', tickets_path,class:"btn btn-outline-primary" %>
</div>
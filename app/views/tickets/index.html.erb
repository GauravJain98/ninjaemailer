<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col" >Email</th>
      <th scope="col" >Text</th>
      <% if Admin.find_by(user_id:current_user.id) %>
        <th scope="col" >Agent</th>
      <% end %>
      <th scope="col"  colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.email %></td>
        <td><%= ticket.text %></td>
        <% if Admin.find_by(user_id:current_user.id) %>
          <% if ticket.agent_id %>
            <td><%= ticket.agent_id %></td>
          <% else %>
            <td>-</td>
          <% end %>
        <% end %>
        <td><%= link_to 'Show', ticket ,class:"btn btn-outline-primary"%></td>
        <% if Admin.find_by(user_id:current_user.id) %>
            <td><%= link_to 'Edit', edit_ticket_path(ticket), class: 'btn btn-primary' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

